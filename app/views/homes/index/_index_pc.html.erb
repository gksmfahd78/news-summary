<%# PC %>
<div class="row" style="margin-top: 20px; margin-left: 2px;">
  
  <div class="col-md-4">
    <img src="<%= x.thumb_nail %>" style="width: 350px; height: 200px; margin-top: 50px; margin-left: 30px;">
  </div>

  <div class="col-md-8" style="margin-left: -50px; border-bottom: 270px solid white; border-left: 50px solid transparent; width: 100%; height: 270px; box-shadow: 7px 7px 1px rgba(0, 0, 0, 0.43);">
    
    <h3 style="margin-top: 20px"><%= x.title %></h3>
    <div style="height: 50px"><%= x.content.truncate(200, omission: '...').html_safe %></div>
    
    <div align="right" style="margin-right: 30px;">
      <div style="margin-top: 30px"><i class="far fa-clock"></i> <%= x.created_at.in_time_zone("Asia/Seoul").strftime('%Y-%m-%d') %></div>
      
      <div class="offset-md-8">
        <a id="kakao-link-btn_<%= x.id %>" href="javascript:;">
          <img src="//developers.kakao.com/assets/img/about/logos/kakaolink/kakaolink_btn_medium.png" style="width: 20px"/>
        </a>
        <%= link_to "[자세히 보기]", "#{x.news_url}", target: "_blank" %>
      </div>
      
    </div>
    
  </div>
  
</div>